@model MRS.Core.Model.Movie.MovieGenresViewModel[]
<h2 class="mt-5">Жанрове</h2>
<div class="row">
    @foreach (var genre in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">@genre.Name</h5>

                    <a asp-controller="Movie" asp-action="Genre" asp-route-genre="@genre.Name" asp-route-page="1" class="btn btn-outline-primary">Виж всички</a>
                </div>
            </div>
        </div>
    }
</div>