@{
    ViewData["Title"] = "Начална страница";
}
@model MRS.Core.Model.Movie.LikeMovie

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h4 class="text-center mb-3">Добре дошли!</h4>
                <p class="text-center">Току-що се регистрирахте като потребител. За да подобрим работата на системата, бихме искали да харесате няколко филма.</p>
                
                <form asp-controller="Movie" asp-action="InitailLikes" class="mt-3">
                    <input name="id" type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Raiting" class="form-label">Оценка (0-5)</label>
                        <input type="number" asp-for="Raiting" class="form-control" min="0" max="5" required>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Търсене на филм</label>
                        <input asp-for="Name" type="text" name="query" class="form-control" placeholder="Въведете име на филм..." required>
                    </div>
                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Оцени</button>
                    </div>
                </form>
                
                <div class="col-md-12 mt-3">
                    <div id="result-container"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/values.js"></script>
<script src="~/js/like_movie.js"></script>