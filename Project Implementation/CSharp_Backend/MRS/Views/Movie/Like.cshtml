@model MRS.Core.Model.Movie.LikeMovie

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h4 class="text-center mb-3">Оценете филма @Model.Name</h4>
                <p class="text-center">Моля, оценете филма по скала от 0 до 5.</p>
                
                <form asp-controller="Movie" asp-action="Like" class="mt-3">
                    <input asp-for="Id" value="@Model.Id" type="hidden" />
                    <input asp-for="Name" value="@Model.Name" type="hidden" />
                    
                    <div class="mb-3">
                        <label for="Raiting" class="form-label">Оценка (0-5)</label>
                        <input asp-for="Raiting" class="form-control" type="number" min="0" max="5" required />
                        <span asp-validation-for="Raiting" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Оцени</button>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>

<!-- Включване на Bootstrap JS и jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>